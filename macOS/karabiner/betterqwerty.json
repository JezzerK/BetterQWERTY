{
  "title": "BetterQWERTY (P↔; and Caps↔Delete)",
  "rules": [
    {
      "description": "Swap P and Semicolon",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "p", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "semicolon" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "semicolon", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "p" }]
        }
      ]
    },
    {
      "description": "Swap Caps Lock and Delete (Backspace)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "caps_lock", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "delete_or_backspace" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "delete_or_backspace", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "caps_lock" }]
        }
      ]
    }
  ]
}

